<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.spectrumcustomizer.example.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"

        >

        <fragment android:name="com.spectrumcustomizer.integration.SpectrumView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spectrum"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/load_recipe"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Load Recipe"
            />

        <Button
            android:id="@+id/load_sku_1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Load SKU 1"
            />

        <Button
            android:id="@+id/load_sku_2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Load SKU 2"
            />

    </LinearLayout>

</LinearLayout>

